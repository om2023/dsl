def longestword():
 str=input("\nEnter string : ")
 long = ""
 i = 0
 while(i < len(str)):
 str1 = ""
 if(i != len(str)):
 while(str[i] == " "):
 i=i+1
 while(str[i] != " "): 
 str1 = str1 + str[i]
 i=i+1
 if(i == len(str)):
 break
 if(len(str1)>len(long)): 
 long = str1
 print("\nLongest word is : ",long) 
